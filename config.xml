<?xml version='1.0' encoding='utf-8'?>
<widget id="com.morroandjasp.unscripted" version="1.0.3" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Morro &amp; Jasp</name>
    <description>
    </description>
    <author email="fono@mobilefono.com" href="http://morroandjasp.com">
        Stitch Media
    </author>
    <content src="index.html" />
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="false" />
    <preference name="disallowOverscroll" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="ShowSplashScreenSpinner" value="true" />
    <preference name="auto-hide-splash-screen" value="false" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="android-installLocation" value="auto" />
    <access origin="*" />
    <allow-navigation href="*://*/*" />
    <platform name="ios">
        <preference name="ios-XCBuildConfiguration-ENABLE_BITCODE" value="NO" />
        <preference name="ios-XCBuildConfiguration-IPHONEOS_DEPLOYMENT_TARGET" value="8.0" />
        <config-file parent="NSAppTransportSecurity" platform="ios" target="*-Info.plist">
            <dict>
                <key>NSAllowsArbitraryLoads</key>
                <true />
            </dict>
        </config-file>
        <config-file parent="UIStatusBarHidden" platform="ios" target="*-Info.plist">
            <true />
        </config-file>
        <config-file parent="UIViewControllerBasedStatusBarAppearance" platform="ios" target="*-Info.plist">
            <false />
        </config-file>
        <config-file parent="UIRequiresFullScreen" platform="ios" target="*-Info.plist">
            <true />
        </config-file>
        <config-file parent="NSCameraUsageDescription" platform="ios" target="*-Info.plist">
            <string>Magic Mirror</string>
        </config-file>
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="BackupWebStorage" value="local" />
    <preference name="DisableCrashRecovery" value="true" />
    <preference name="iosPersistentFileLocation" value="Library" />
    <preference name="cordova-custom-config-autorestore" value="false" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkVersion" value="22" />
    <preference name="xwalkMode" value="embedded" />
    <preference name="xwalkMultipleApk" value="true" />
    <plugin name="cordova-plugin-device" spec="1.1.2" />
    <plugin name="cordova-plugin-network-information" spec="1.2.1" />
    <plugin name="cordova-plugin-splashscreen" spec="3.2.2" />
    <plugin name="cordova-custom-config" spec="1.2.6" />
    <plugin name="cordova-fabric-plugin" spec="1.0.8">
        <variable name="FABRIC_API_SECRET" value="4737ad2947dc827e0fd934f48f3f435bb48adcc339e54f8b7f0af4d49ea30162" />
        <variable name="FABRIC_API_KEY" value="51ae0a3acec6265184aa63d93b5fd86815e4d1dc" />
    </plugin>
    <plugin name="cordova.plugins.diagnostic" spec="3.0.2" />
    <plugin name="com.telerik.plugins.wkwebview" spec="0.6.10" />
    <engine name="android" spec="6.0.0" />
    <engine name="ios" spec="3.9.2" />
</widget>
